@model TambahAkunVM

@{
    ViewData["Title"] = "Akun | TambahAkun";
}

<!-- Breadcrumb -->
<div class="row" style="justify-content: center;">
    <div class="col-12 col-md-6 col-lg-6" style="padding: 0;">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="">Akun</a></li>
                <li class="breadcrumb-item"><a asp-area="Dashboard" asp-controller="Akun" asp-action="Penerimaan">Penerimaan</a></li>
                <li class="breadcrumb-item" aria-current="page">Tambah Akun</li>
            </ol>
        </nav>
    </div>
</div>

<div class="section-body">
    <div class="row" style="justify-content: center;">
        <div class="col-12 col-md-6 col-lg-6">
            <div class="card card-primary">
                <div class="card-header" style="padding-top: 40px;">
                    <h4>Tambah Jenis Akun</h4>
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <label>Uraian<span class="text-danger">*</span></label>
                        <input type="text" class="form-control" autofocus>
                    </div>
                    <div class="form-group">
                        <label>Jenis Akun<span class="text-danger">*</span></label>
                        <select class="form-control selectric">
                            <option selected>Pilih Jenis Akun...</option>
                            <option>1.1	Sisa lebih perhitungan tahun (Surplus)</option>
                            <option>1.2	Kolekte/Persembahan</option>
                            <option>1.3	Kolekte Ibadah Syukur</option>
                            <option>1.4	Nazar</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label>Kelompok Akun<span class="text-danger">*</span></label>
                        <select class="form-control selectric">
                            <option selected>Pilih Kelompok Akun...</option>
                            <option>1.2.2	Kolekte Kebaktian Hari Raya Gerejawi</option>
                            <option>1.2.3	Kolekte Kebaktian Sakramen Perjamuan Kudus</option>
                            <option>1.2.4	Kolekte Kebaktian Baptisan Kudus</option>
                            <option>1.2.5	Kolekte Kebaktian Peneguhan Sidi Baru</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label>Golongan Akun<span class="text-danger">*</span></label>
                        <select class="form-control selectric">
                            <option selected>Pilih Kelompok Akun...</option>
                            <option></option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label>Presentase Setoran Sinode<span class="text-danger">*</span></label>
                        <div class="input-group mb-2">
                            <input type="number" class="form-control">
                            <div class="input-group-append">
                                <div class="input-group-text">%</div>
                            </div>                           
                        </div>
                    </div>
                </div>
                <div class="card-footer text-right">
                    <button class="btn btn-primary mr-1" type="submit">Submit</button>
                    <button class="btn btn-danger" data-toggle="modal" data-target="#basicModal2" type="reset">Batal</button>
                </div>
            </div>
        </div>
    </div>
</div>