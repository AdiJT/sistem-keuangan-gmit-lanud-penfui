@using SIKeuanganGMITLanudPenfui.Domain.Enums
@using SIKeuanganGMITLanudPenfui.Domain.Repositories
@model TambahAkunVM

@inject IRepositoriKelompokAkun RepositoriKelompokAkun;
@inject IRepositoriGolonganAkun RepositoriGolonganAkun;

@{
    ViewData["Title"] = $"Akun | {Model.Jenis.ToString()} - Tambah Akun";
    var daftarKelompokAkun = Model.DaftarJenisAkun.Count > 0 ? await RepositoriKelompokAkun.GetAllByJenis(Model.DaftarJenisAkun[0]) : new List<KelompokAkun>();
    var daftarGolonganAkun = daftarKelompokAkun.Count > 0 ? await RepositoriGolonganAkun.GetAllByKelompokAkun(daftarKelompokAkun[0]) : new List<GolonganAkun>();
}

<h1>Tambah Akun - @Model.Jenis.ToString() - @Model.Tahun</h1>

<div class="row">
    <form asp-action="TambahAkun" asp-route-jenis="@Model.Jenis" asp-route-tahun="@Model.Tahun">
        <div asp-validation-summary="ModelOnly" class="form-text text-danger"></div>

        <div class="col mb-3">
            <label asp-for="@Model.Uraian" class="form-label"></label>
            <input asp-for="@Model.Uraian" class="form-control" />
            <span asp-validation-for="@Model.Uraian" class="form-text text-danger"></span>
        </div>

        @if(Model.Jenis == Jenis.Penerimaan)
        {
            <div class="col mb-3">
                <label asp-for="@Model.PresentaseSetoranSinode" class="form-label"></label>
                <input asp-for="@Model.PresentaseSetoranSinode" class="form-control" />
                <span asp-validation-for="@Model.PresentaseSetoranSinode" class="form-text text-danger"></span>
            </div>
        }

        <div class="col mb-3">
            <label class="form-label" asp-for="@Model.IdJenisAkun">Jenis Akun</label>
            <select class="form-control" asp-for="@Model.IdJenisAkun" id="idJenisAkun">
                @foreach (var jenisAkun in Model.DaftarJenisAkun)
                {
                    <option value="@jenisAkun.Id">@jenisAkun.Uraian</option>
                }
            </select>
            <span asp-validation-for="@Model.IdJenisAkun" class="form-text text-danger"></span>
        </div>

        <div class="col mb-3">
            <label asp-for="@Model.IdKelompokAkun" class="form-label"></label>
            <select asp-for="@Model.IdKelompokAkun" id="idKelompokAkun" class="form-control">
                <option value="@null">Pilih Kelompok Akun</option>
                @foreach (var kelompokAkun in daftarKelompokAkun)
                {
                    <option value="@kelompokAkun.Id">@kelompokAkun.Uraian</option>
                }
            </select>
            <span asp-validation-for="@Model.IdKelompokAkun" class="form-text text-danger"></span>
        </div>

        <div class="col mb-3">
            <label asp-for="@Model.IdGolonganAkun" class="form-label"></label>
            <select asp-for="@Model.IdGolonganAkun" id="idGolonganAkun" class="form-control">
                <option value="@null">Pilih Golongan Akun</option>
                @foreach (var golonganAkun in daftarGolonganAkun)
                {
                    <option value="@golonganAkun.Id">@golonganAkun.Uraian</option>
                }
            </select>
            <span asp-validation-for="@Model.IdGolonganAkun" class="form-text text-danger"></span>
        </div>

        <input asp-for="@Model.Jenis" class="form-control" readonly hidden />

        <input asp-for="@Model.Tahun" class="form-control" readonly hidden />

        <input asp-for="@Model.ReturnURL" readonly hidden />

        <div class="col mb-3">
            <button class="btn btn-primary">
                Simpan
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        const selectIdJenisAkun = $('select#idJenisAkun');
        const selectIdKelompokAkun = $('select#idKelompokAkun');
        const selectIdGolonganAkun = $('select#idGolonganAkun');
        const urlKelompokAkun = '@(Url.ActionLink("KelompokAkun"))';
        const urlGolonganAkun = '@(Url.ActionLink("GolonganAkun"))';

        $(selectIdJenisAkun).on('change', async function () {
            const idJenisAkun = selectIdJenisAkun.val();

            try {
                const response = await fetch(`${urlKelompokAkun}?idJenisAkun=${idJenisAkun}`);

                if (response.ok) {
                    const json = await response.json();

                    selectIdKelompokAkun.html('');
                    selectIdKelompokAkun.append(`<option value="null">Pilih Kelompok Akun</option>`);
                    for (let kelompokAkun of json) {
                        selectIdKelompokAkun.append(`<option value="${kelompokAkun.Id}">${kelompokAkun.Uraian}</option>`);
                    }
                }

            } catch (error) {
                console.error(error);
            }
        });

        $(selectIdKelompokAkun).on('change', async function () {
            const idKelompokAkun = selectIdKelompokAkun.val();

            try {
                selectIdGolonganAkun.html('');
                selectIdGolonganAkun.append(`<option value="null">Pilih Golongan Akun</option>`);
                const response = await fetch(`${urlGolonganAkun}?idKelompokAkun=${idKelompokAkun}`);

                if (response.ok) {
                    const json = await response.json();

                    selectIdGolonganAkun.html('');
                    selectIdGolonganAkun.append(`<option value="null">Pilih Golongan Akun</option>`);
                    for (let golonganAkun of json) {
                        selectIdGolonganAkun.append(`<option value="${golonganAkun.Id}">${golonganAkun.Uraian}</option>`);
                    }
                }

            } catch (error) {
                console.error(error);
            }
        });
    </script>
}