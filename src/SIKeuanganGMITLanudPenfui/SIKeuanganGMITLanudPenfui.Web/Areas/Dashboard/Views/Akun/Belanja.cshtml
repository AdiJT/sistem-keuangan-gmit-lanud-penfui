    </div>
</div>


@section Scripts {
    <partial name="_BreadcrumbScriptPartial" />

    <script type="text/javascript">
        $("select#tahun").on('change', function () {
            const url = '/Dashboard/Akun/Belanja';
            const tahun = $('select#tahun').val()

            location.href = url + `/${tahun}`;
        });
    </script>
}