@inject IRepositoriAkun RepositoriAkun

@model BelanjaVM

@{
    ViewData["Title"] = "Akun | Belanja";
}

<!-- Breadcrumb -->
<div class="row">
    <partial name="_BreadcrumbPartial" />
</div>

<div class="card card-danger">
    <div class="card-header">
        <h4>Kelola Akun Belanja</h4>
    </div>
