@model EditJenisAkunVM
@using SIKeuanganGMITLanudPenfui.Domain.Enums

@{
    ViewData["Title"] = $"Akun | {Model.Jenis.ToString()} - Edit Jenis Akun";
}

<h1>Edit Jenis Akun - @Model.Jenis.ToString() - @Model.Tahun</h1>

<div class="row">
    <form asp-action="EditJenisAkun" asp-route-jenis="@Model.Jenis" asp-route-tahun="@Model.Tahun" asp-route-id="@Model.Id">
        <div asp-validation-summary="ModelOnly" class="form-text text-danger"></div>

        <div class="col mb-3">
            <label asp-for="@Model.Uraian" class="form-label"></label>
            <input asp-for="@Model.Uraian" class="form-control" />
            <span asp-validation-for="@Model.Uraian" class="form-text text-danger"></span>
        </div>

        <input asp-for="@Model.Jenis" class="form-control" readonly hidden />

        <input asp-for="@Model.Tahun" class="form-control" readonly hidden />

        <input asp-for="@Model.ReturnUrl" readonly hidden />

        <div class="col mb-3">
            <button class="btn btn-primary">
                Simpan
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}