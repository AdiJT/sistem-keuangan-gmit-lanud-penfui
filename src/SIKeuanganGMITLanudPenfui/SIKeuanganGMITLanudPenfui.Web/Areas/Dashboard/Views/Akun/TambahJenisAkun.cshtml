@model TambahJenisAkunVM

@{
    ViewData["Title"] = "Akun | TambahJenisAkun";
}

<!-- Breadcrumb -->
<div class="row" style="justify-content: center;">
    <div class="col-12 col-md-6 col-lg-6" style="padding: 0;">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="">Akun</a></li>
                <li class="breadcrumb-item"><a asp-area="Dashboard" asp-controller="Akun" asp-action="Penerimaan">Penerimaan</a></li>
                <li class="breadcrumb-item" aria-current="page">Tambah Jenis Akun</li>
            </ol>
        </nav>
    </div>
</div>

<div class="section-body">
    <div class="row" style="justify-content: center;">
        <div class="col-12 col-md-6 col-lg-6">
            <div class="card card-primary">
                <div class="card-header" style="padding-top: 40px;">
                    <h4>Tambah Jenis Akun</h4>
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <label>Uraian<span class="text-danger">*</span></label>
                        <input type="text" class="form-control" autofocus>
                    </div>
                    <div class="form-group">
                        <label>Jenis<span class="text-danger">*</span></label>
                        <select class="form-control selectric">
                            <option selected>Pilih Jenis...</option>
                            <option>Penerimaan</option>
                            <option>Belanja</option>
                        </select>
                    </div>
                </div>
                <div class="card-footer text-right">
                    <button class="btn btn-primary mr-1" type="submit">Submit</button>
                    <button class="btn btn-danger" data-toggle="modal" data-target="#basicModal2" type="reset">Batal</button>
                </div>
            </div>
        </div>
    </div>
</div>