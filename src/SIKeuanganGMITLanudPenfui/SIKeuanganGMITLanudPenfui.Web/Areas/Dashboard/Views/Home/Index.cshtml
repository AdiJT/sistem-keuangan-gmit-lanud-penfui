                                .OrderBy(g => g.Key)
                                .Select(g => new KeyValuePair<string, double>(g.Key.ToString("dd/MM/yyyy"), g.Sum(t => t.Jumlah)))),
                        Type = ChartType.Line
                    })" />
                </div>
                <div class="card-footer d-flex justify-content-center">
                    Bulan Januari
                </div>
            </div>
            <div class="col-12">
                <div class="card-body">
                    <vc:chart chart-model="@(new ChartVM
                    {
                        Label = "Pengeluaran",
                          Data=new Dictionary<string, double>(
                            Model.DaftarTransaksi
                                .Where(t => t.Jenis == Jenis.Belanja && t.Tanggal.Year == DateTime.Now.Year)
                                .GroupBy(t => t.Tanggal.Month)
                                .OrderBy(g => g.Key)
                                .Select(g => new KeyValuePair<string, double>(cultureInfo.DateTimeFormat.GetAbbreviatedMonthName(g.Key), g.Sum(t => t.Jumlah)))),
                        Type = ChartType.Line
                    })" />
                </div>
                <div class="card-footer d-flex justify-content-center">
                    Tahun 2024
                </div>
            </div>
            <div class="col-12">
                <div class="card-body">
                    <vc:chart chart-model="@(new ChartVM
                    {
                        Label = "Pengeluaran",
                          Data=new Dictionary<string, double>(
                            Model.DaftarTransaksi
                                .Where(t => t.Jenis == Jenis.Belanja)
                                .GroupBy(t => t.Tanggal.Year)
                                .OrderBy(g => g.Key)
                                .Select(g => new KeyValuePair<string, double>(g.Key.ToString(), g.Sum(t => t.Jumlah)))),
                        Type = ChartType.Line
                    })" />
                </div>
            </div>
        </div>
    </div> 
</div>

@section Scripts {
    <script type="text/javascript">
        $(function () {
            $('.grafik').owlCarousel({
                loop: true,
                autoPlay: true,
                nav: true,
                items: 1
            });
        });
    </script>
}