@using SIKeuanganGMITLanudPenfui.Web.Models
@model IndexVM

@{
    ViewData["Title"] = "Home Page";
    var cultureInfo = new CultureInfo("id-ID");
}

<div class="card">
    <div class="card-header">
        Total Penerimaan SD @DateTime.Now.ToString("dd MMMM yyyy", cultureInfo)
    </div>
    <div class="card-body">
        @Model.DaftarTransaksi.Where(t => t.Jenis == Jenis.Penerimaan).Sum(t => t.Jumlah).ToString("C2", cultureInfo)
    </div>
</div>

<div class="card">
    <div class="card-header">
        Total Pengeluaran SD @DateTime.Now.ToString("dd MMMM yyyy", cultureInfo)
    </div>
    <div class="card-body">
        @Model.DaftarTransaksi.Where(t => t.Jenis == Jenis.Belanja).Sum(t => t.Jumlah).ToString("C2", cultureInfo)
    </div>
</div>

<div class="card">
    <div class="card-header">
        Penerimaan
    </div>
    <div class="card-body">
        <div class="row owl-carousel owl-theme grafik">
            <div class="col-12">
                <div class="card-body">
                    <vc:chart chart-model="@(new ChartVM
                    {
                        Label = " Jumlah Penerimaan",
                          Data=new Dictionary<string, double>(
                            Model.DaftarTransaksi
                                .Where(t => t.Jenis == Jenis.Penerimaan && t.Tanggal.Month == 1)
                                .GroupBy(t => t.Tanggal.Date)
                                .OrderBy(g => g.Key)
                                .Select(g => new KeyValuePair<string, double>(g.Key.ToString("dd/MM/yyyy"), g.Sum(t => t.Jumlah)))),
                        Type = ChartType.Line
                    })" />
                </div>
                <div class="card-footer d-flex justify-content-center">
                    Bulan Januari
                </div>
            </div>
            <div class="col-12">
                <div class="card-body">
                    <vc:chart chart-model="@(new ChartVM
                    {
                        Label = " Jumlah Penerimaan",
                          Data=new Dictionary<string, double>(
                            Model.DaftarTransaksi
                                .Where(t => t.Jenis == Jenis.Penerimaan && t.Tanggal.Year == DateTime.Now.Year)
                                .GroupBy(t => t.Tanggal.Month)
                                .OrderBy(g => g.Key)
                                .Select(g => new KeyValuePair<string, double>(cultureInfo.DateTimeFormat.GetAbbreviatedMonthName(g.Key), g.Sum(t => t.Jumlah)))),
                        Type = ChartType.Line
                    })" />
                </div>
                <div class="card-footer d-flex justify-content-center">
                    Tahun 2024
                </div>
            </div>
            <div class="col-12">
                <div class="card-body">
                    <vc:chart chart-model="@(new ChartVM
                    {
                        Label = " Jumlah Penerimaan",
                          Data=new Dictionary<string, double>(
                            Model.DaftarTransaksi
                                .Where(t => t.Jenis == Jenis.Penerimaan)
                                .GroupBy(t => t.Tanggal.Year)
                                .OrderBy(g => g.Key)
                                .Select(g => new KeyValuePair<string, double>(g.Key.ToString(), g.Sum(t => t.Jumlah)))),
                        Type = ChartType.Line
                    })" />
                </div>
            </div>
        </div>
    </div> 
</div>

<div class="card">
    <div class="card-header">
        Pengeluaran
    </div>
    <div class="card-body">
        <div class="row owl-carousel owl-theme grafik">
